@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.OA.Contract
@using GMS.Web
@model Branch
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
   </script>
}
@section MainContent{
<div class="portlet-body form-horizontal form-bordered form-row-stripped">
    <div class="row-fluid">
        <div class="control-group">
            <label class="control-label"><span class="required">*</span>名称：</label>
            <div class="controls">
                <input name="Name" type="text" value="张一易">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label"><span class="required">*</span>制定人/部门：</label>
            <div class="controls">
                <input name="Name" type="text" value="国家">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label"><span class="required">*</span>需求简介：</label>
            <div class="controls">
                <textarea style="margin: 0px; width: 560px; height: 60px;"></textarea>
            </div>
        </div>

        <div class="control-group">
            <div>
                <label class="control-label"><span class="required">*</span>所需食材：</label>
                <div class="controls">
                    <div>
                        <span>种类&nbsp;</span>
                        <select id="ZhongLei" class="form-control" style="width:400px;">
                            <option value="1">酒类</option>
                            <option value="2">甜味料</option>
                            <option value="3">调味品</option>
                            <option value="4">饮料类</option>
                            <option value="5">其他类</option>
                            <option value="6">焙烤食品</option>
                            <option value="7">冷冻饮品</option>
                            <option value="8">乳与乳制品</option>
                            <option value="9">肉及肉制品</option>
                            <option value="10">蛋及蛋制品</option>
                            <option value="11">特殊营养食品</option>
                            <option value="12">粮食和粮食制品</option>
                            <option value="13">水产品及其制品</option>
                            <option value="14">脂肪、油和乳化脂肪制品</option>
                            <option value="15">可可制品、巧克力和巧克力制品</option>
                            <option value="16">水果、蔬菜、豆类、食用菌、藻类、坚果以及籽类</option>
                        </select>
                    </div>
                    <div style="margin-top:10px;">
                        <span>子类&nbsp;</span>
                        <select id="ZiLei" class="form-control" style="width:400px;">
                            <option value="1">酒类</option>
                            <option value="2">甜味料</option>
                            <option value="3">调味品</option>
                            <option value="4">饮料类</option>
                            <option value="5">其他类</option>
                            <option value="6">焙烤食品</option>
                            <option value="7">冷冻饮品</option>
                            <option value="8">乳与乳制品</option>
                            <option value="9">肉及肉制品</option>
                            <option value="10">蛋及蛋制品</option>
                            <option value="11">特殊营养食品</option>
                            <option value="12">粮食和粮食制品</option>
                            <option value="13">水产品及其制品</option>
                            <option value="14">脂肪、油和乳化脂肪制品</option>
                            <option value="15">可可制品、巧克力和巧克力制品</option>
                            <option value="16">水果、蔬菜、豆类、食用菌、藻类、坚果以及籽类</option>
                        </select>
                    </div>
                    <div style="margin-top:10px;">
                        <span>数量(KG)&nbsp;</span>
                        <input id="Numbers" type="text" onkeyup="value=value.replace(/^\D*(\d*(?:\.\d{0,2})?).*$/g, '$1')">
                        <ul class="nav nav-pills" style="margin-left:300px;margin-top:-30px;">
                            <li role="presentation" class="active"><a onclick="TianJia()" id="TianJia" href="javascript:">添加</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label"><span class="required">*</span>食材显示：</label>
            <div class="controls">
                <textarea id="ShiPingNeiRong" style="margin: 0px; width: 560px; height: 300px;"></textarea>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label"><span class="required">*</span>所需资金：</label>
            <div class="controls">
                <input readonly name="Name" type="text" id="Money">
            </div>
        </div>
        <script>
            var i = 1;
            var money = 0;
            function TianJia() {
                var text = i + "，种类：" + $("#ZhongLei option:selected").text() + "，"
                    + "子类：" + $("#ZiLei option:selected").text() + "，"
                    + "数量：";

                if ($("#Numbers").val() == "") {
                    alert("请填写数量")
                    return;
                }

                var mm = (Math.random() * (100000 - 100 + 1) + 100);

                money += mm;

                text += $("#Numbers").val()
                    + " Kg，金额：" + mm.toFixed(2) + "元\n";

                var tx = $("#ShiPingNeiRong").text();

                $("#ShiPingNeiRong").text(tx + text);
                $("#Money").val(money.toFixed(2));
                i++;
            }
        </script>
    </div>
</div>
}

